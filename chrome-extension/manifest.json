{
  "manifest_version": 3,
  "name": "FAB戦績一覧表示",
  "version": "1.0.0",
  "description": "イベント履歴ページから戦績一覧を抽出して表示します",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://gem.fabtcg.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gem.fabtcg.com/profile/history/*",
        "file:///*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

